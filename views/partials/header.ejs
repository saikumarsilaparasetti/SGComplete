  </script>

<script>
  const curr_path = window.location.pathname;
  
  const div_curr_path = document.querySelector('.curr_path')
  let path_array = curr_path.split('/')
  path_array = path_array.slice(1, path_array.length-1)
  let result = '';
  let result_html = ''
  path_array.forEach(element=>{
      //console.log(element)
      result+=('/'+element)
      // console.log('->'+result+'<-')
      let tem = '<a class="path_" href="'+result+'">'+element+'</a>>'
      result_html+= tem
  })
  div_curr_path.innerHTML = result_html
</script>
</html>
